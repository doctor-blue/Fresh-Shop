<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/green_400</item>
        <item name="colorPrimaryDark">@color/green_700</item>
        <item name="colorAccent">@color/yellow_600</item>
        <item name="colorSecondary">@color/yellow_400</item>
        <item name="android:colorBackground">@color/white</item>
    </style>

    <style name="IntroScreenTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="TextAppearance.Fresh.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/yellow_400</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextAppearance.Fresh.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/yellow_400</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.Fresh.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="hintTextAppearance">@style/Widget.Fresh.TextInputLayout</item>
        <item name="hintTextColor">@color/black</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:topLeftRadius">20dp</item>
        <item name="android:topRightRadius">20dp</item>
    </style>

    <style name="Widget.Fresh.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">?attr/colorAccent</item>
    </style>
</resources>
